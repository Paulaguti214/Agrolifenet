@using Agrolifenet.FrontEnd.Modelos
<BaseFormularioComponente NombreFormulario="Crear Venta"
                          NombreEncabezadoDetalle="Ver Detalle"
                          Modelo="ventaGuardarActualizar"
                          TModelo="VentaGuardarActualizarDto"
                          Ejecutar="GuardarVenta">
    <ContenidoFormulario>
        <ValidationSummary />
        <div class="row g-3 mb-3">
            <div class="col-2"><label class="col-form-label">Identificación</label></div>
            <div class="col-2">
                <InputText @bind-Value="ventaGuardarActualizar.IdentificacionDelCompradorVentas" class="form-control"></InputText>
                <ValidationMessage class="validation-message" For="@(() => ventaGuardarActualizar.IdentificacionDelCompradorVentas)" />
            </div>
            <div class="col-2"><label class="col-form-label">Nombre Apellidos</label></div>
            <div class="col-6">
                <InputText @bind-Value="ventaGuardarActualizar.NombreDelCompradorVenta" class="form-control"></InputText>
                <ValidationMessage class="validation-message" For="@(() => ventaGuardarActualizar.NombreDelCompradorVenta)" />
            </div>
        </div>
        <div class="row g-3 mb-3">
            <div class="col-2"><label class="col-form-label">Teléfono Celular</label></div>
            <div class="col-2">
                <InputText @bind-Value="ventaGuardarActualizar.TelefonoDelComprador" class="form-control" />
                <ValidationMessage class="validation-message" For="@(() => ventaGuardarActualizar.TelefonoDelComprador)" />
            </div>
            <div class="col-2"><label class="col-form-label">Correo Electrónico</label></div>
            <div class="col-4">
                <InputText @bind-Value="ventaGuardarActualizar.Correo" class="form-control" />
                <ValidationMessage class="validation-message" For="@(() => ventaGuardarActualizar.Correo)" />
            </div>
            <div class="col-2 d-flex justify-content-start align-items-center">
                <div class="form-check form-switch">
                    <InputCheckbox id="flexSwitchCheckDefault" @bind-Value="ventaGuardarActualizar.EstadoVenta" class="form-check-input" /><label class="form-check-label d-xl-flex" for="formCheck-1">Estado</label>
                </div>
            </div>
        </div>
        <div class="row g-3 mb-3">
            <div class="col-2 col-auto"><label class="col-form-label">Valor total a pagar</label></div>
            <div class="col-2">
                <div class="input-group">
                    <span class="input-group-text">@String.Format("{0:#,##0.00;(#,##0.00);0}", ventaGuardarActualizar.PrecioVenta)</span> <span class="input-group-text">$</span>
                </div>
            </div>
            <div class="col-2"><label class="col-form-label">Condiciones de venta</label></div>
            <div class="col-6" rowspan="5">
                <InputTextArea @bind-Value="ventaGuardarActualizar.CondicionesDeVenta" class="form-control"></InputTextArea>
            </div>
        </div>
        <div class="row g-3 mb-3">
            <div class="col-2 col-auto"><label class="col-form-label">Método de pago</label></div>
            <div class="col-2">
                <select @bind="@ventaGuardarActualizar.MetodoDePagoVenta" class="form-select">
                    <option value="">
                        Seleccione
                    </option>
                    @foreach (var estadoNacido in (FormasDePago[])Enum.GetValues(typeof(FormasDePago)))
                    {
                        <option value="@estadoNacido">
                            @estadoNacido
                        </option>
                    }
                </select>
                <ValidationMessage class="validation-message" For="@(() => ventaGuardarActualizar.MetodoDePagoVenta)" />
            </div>
            <div class="col-2 col-auto"><label class="col-form-label">Destino de venta</label></div>
            <div class="col-6" rowspan="5">
                <InputTextArea @bind-Value="ventaGuardarActualizar.DestinoVenta" class="form-control"></InputTextArea>
                <ValidationMessage class="validation-message" For="@(() => ventaGuardarActualizar.DestinoVenta)" />
            </div>
            <div class="col">
                <button class="btn btn-success" type="submit" disabled="@(!PuedeGuardarVenta)">&nbsp;Facturar&nbsp;<i class="fa fa-plus-circle"></i></button>
            </div>
        </div>
    </ContenidoFormulario>
    <ContenidoDetalle>
        @if (AgregarDetalle)
        {
            <div class="row g-3 mb-2">
                <div class="col-5">
                    <div class="input-group">
                        <span class="input-group-text"># Chip</span>
                        <InputText @bind-Value="NumeroChipBuscar" class="form-control"></InputText>
                        <button class="btn btn-success" @onclick="BuscarGanado" type="button">
                            <i class="fab fa-sistrix fa-1x"></i>
                        </button>
                    </div>
                </div>
                <div class="col d-flex justify-content-center align-items-center"><label class="col-form-label"><b>Valor Kilo :</b> @String.Format("{0:$ #,##0.00;($ #,##0.00);0}", valorKilo)</label></div>
                <div class="col d-flex justify-content-center align-items-center"><label class="col-form-label"><b>Total:</b> @String.Format("{0:$ #,##0.00;($ #,##0.00);0}", @ventaGuardarActualizar.detalleVentas.Sum(detalle => detalle.Valor))</label></div>
            </div>
            <div class="row g-3 mb-2">
                <div class="col">
                    <div class="table-responsive table mt-2" id="dataTable-1" role="grid" aria-describedby="dataTable_info">
                        <table class="table my-0" id="dataTable">
                            <thead>
                                <tr>
                                    <th># Chip</th>
                                    <th>Tipo Animal</th>
                                    <th>Raza</th>
                                    <th>Valor</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in ventaGuardarActualizar.detalleVentas)
                                {
                                    <tr>
                                        <td>@detalle.Ganado.NumerodelchipGanado</td>
                                        <td>@detalle.Ganado.Tiposdeanimal</td>
                                        <td>@detalle.Ganado.Tipoderaza<br></td>
                                        <td>@String.Format("{0:$ #,##0.00;($ #,##0.00);0}", @detalle.Valor)</td>
                                        <td class="text-center">
                                            <a class="link-success link-primary" @onclick="() => EliminarDetalle(detalle.IdDetalledeVenta, detalle.IdGanado)"><i class="fa fa-remove"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr></tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 align-self-center">
                    <p id="dataTable_info" class="dataTables_info" role="status" aria-live="polite">Mostrando1 a 10 de 27</p>
                </div>
                <div class="col-md-6">
                    <nav class="d-lg-flex justify-content-lg-end dataTables_paginate paging_simple_numbers">
                        <ul class="pagination">
                            <li class="page-item disabled"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        }

    </ContenidoDetalle>
</BaseFormularioComponente>